@model Umbraco7.Models.TwitterLatestTweetsModel


<div class="row">
    <div class="column col-xs-12 col-sm-9 col-md-9 col-lg-9">
        <div class="box">
            <div class="box-icon">
                <span class="fa fa-4x fa-twitter"></span>
            </div>
            <div class="info">
                <h4 class="text-center">@Model.ContentTitle</h4>
                <a class="twitter-timeline" href="https://twitter.com/drgnlover" width="500" data-widget-id="557393256297029634">Tweets by @Model.TwitterAccountNames.FirstOrDefault() </a>
                @if (Model.Tweets != null && Model.Tweets.Count > 0)
                {
                    <ul>
                        @foreach (var tweetAccount in Model.Tweets)
                        {
                            if (tweetAccount.Value != null) { 

                                foreach (var tweet in tweetAccount.Value)
                                    {
                                        <li>
                                            <a href="http://www.twitter.com/@tweetAccount.Key">@tweet</a>
                                        </li>
                                    }
                            }
                            else
                            {
                                 <li>
                                    No tweets have been returned
                                </li>
                                 if (!string.IsNullOrEmpty(Model.Error)) { 
                                   <li class="error">@Model.Error</li>
                                 }
                            }
                        }
                    </ul>
                }
            </div>
        </div>
    </div>
</div>
